# Supreme Court Judgment Scraper Configuration
# Copy this file to .env and fill in your actual values

# MongoDB Configuration
MONGO_CONNECTION_STRING=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority&appName=YourApp
MONGO_DATABASE=supreme_court_judgments
MONGO_COLLECTION_JUDGMENTS=judgments
MONGO_COLLECTION_PROGRESS=scraping_progress

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=ap-south-1
S3_BUCKET_NAME=your_s3_bucket_name
S3_FOLDER_PREFIX=supreme-court-judgments/

# Scraping Configuration
SCRAPING_START_YEAR=1995
SCRAPING_END_YEAR=2000
SCRAPING_MAX_DATE_RANGE_DAYS=30
SCRAPING_HEADLESS=true
SCRAPING_SLOW_MO=1000
SCRAPING_TIMEOUT=30000
SCRAPING_RETRY_DELAY=5
SCRAPING_MAX_RETRIES=3

# CAPTCHA Configuration
CAPTCHA_USE_MANUAL_INPUT=true
CAPTCHA_OCR_CONFIDENCE_THRESHOLD=0.7
CAPTCHA_MAX_ATTEMPTS=3

# OpenAI Configuration (for CAPTCHA solving)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=100
OPENAI_TEMPERATURE=0.1

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=scraper.log
LOG_FORMAT={time:YYYY-MM-DD HH:mm:ss} | {level} | {name}:{function}:{line} - {message}

# Optional: Proxy Configuration (if needed)
# PROXY_HOST=
# PROXY_PORT=
# PROXY_USERNAME=
# PROXY_PASSWORD=

# Optional: Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=30
RATE_LIMIT_DELAY_BETWEEN_REQUESTS=2

# Optional: Download Configuration
DOWNLOAD_DIRECTORY=./downloads
MAX_FILE_SIZE_MB=50
CLEANUP_LOCAL_FILES=true

# Browser Configuration
BROWSER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
BROWSER_VIEWPORT_WIDTH=1920
BROWSER_VIEWPORT_HEIGHT=1080

# Error Handling
MAX_CONSECUTIVE_FAILURES=5
FAILURE_COOLDOWN_MINUTES=10
AUTO_RESTART_ON_FAILURE=true

# Performance Tuning
CONCURRENT_REQUESTS=1
PAGE_LOAD_TIMEOUT=30000
NETWORK_IDLE_TIMEOUT=5000